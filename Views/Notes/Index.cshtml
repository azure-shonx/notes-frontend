@using System.Text.Json
@using net.shonx.privatenotes.backend
@model IEnumerable<net.shonx.privatenotes.backend.Note>
@{
    ViewData["Title"] = "Home Page";
}
<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </thead>
    <tbody>
        @foreach (Note item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-SecretName="@item.Name">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-SecretName="@item.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>